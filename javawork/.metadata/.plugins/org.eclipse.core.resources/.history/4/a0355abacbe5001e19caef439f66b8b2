package day0319;

import java.util.Scanner;

public class Ex11_StringMunje {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String msg;
		Scanner sc= new Scanner(System.in);
		int a=0,b=0,c=0;

		System.out.println("문자열 입력");
		msg=sc.nextLine();
		System.out.println(msg);
		for (int i=0;i<msg.length();i++) 
		{
			//char ch= msg.charAt(i);
			if ('A'<=msg.charAt(i)&&msg.charAt(i)<='Z') 
				a++;
			else if ('a'<=msg.charAt(i)&&msg.charAt(i)<='z')
				b++;
			else if ('0'<=msg.charAt(i)&&msg.charAt(i)<='9')
				c++;


		}
		System.out.println("소문자:"+b);
		System.out.println("대문자:"+a);
		System.out.println("숫자:"+c);



	}

}

