package day0319;

import java.util.Date;

public class Ex9_DateCalendar {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//Date 클래스를 이용해서 년,월,일,시,분,초 얻기(JDK1.1 이후 Deprecate되고 Calendar을 권장하나 여전히 많이 사용중)
		Date date=new Date();//디폴트로 생성시 현재날짜와 시간을 얻는다
		int year = date.getYear();//1900이 빠진값으로 반환
		int month= date.getMonth();//0~11이 반환  
		int day = date.getDate();
		int week=date.getDay();//요일(0:일,1:월,2:화 ....6:토)
		System.out.println("현재년도:"+year);
		System.out.println("현재월:"+month);
		System.out.println("현재일:"+day);
		System.out.println("현재요일:"+week+"("+(week==0?일:week==1?월:week==2?화:week==3?수:week==4?목:week==5?금:week==6?토)+")");

	}

}
