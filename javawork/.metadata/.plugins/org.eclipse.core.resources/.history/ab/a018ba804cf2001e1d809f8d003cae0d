	static public void showTitle()
	{
		System.out.println("=".repeat(40));
		System.out.println("시퀀스\t이름\t성별\t부서\t점수");
		System.out.println("=".repeat(40));
	}
	public void writeSawon() {
		
	}
	public static void main(String[] args) {
